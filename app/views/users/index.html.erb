<h3><%= t 'users_index' %></h3>

<table class="table table-striped table-condensed">
  <thead>
    <tr>
      <th><%= t 'username' %></th>
      <th><%= t 'user_created' %></th>
      <th><%= t 'user_delete' %></th>
    </tr>
  </thead>
  <tbody>
  <% @users.each do |user| %>
    <tr>
      <td><%= link_to user.name, user %> </td>
      <td><%= user.created_at.to_date %></td>
	  <td><%= link_to t('user_delete'), user, method: :delete,
                                  data: { confirm: t('are_you_sure') }%></td>
    </tr>
  <% end %>
</tbody>
</table>
