<h3>Users</h3>

<table class="table table-striped table-condensed">
  <thead>
    <tr>
      <th>Username</th>
      <th>Created</th>
      <th>Delete</th>
    </tr>
  </thead>
  <tbody>
  <% @users.each do |user| %>
    <tr>
      <td><%= link_to user.name, user %> </td>
      <td><%= user.created_at.to_date %></td>
	  <td><%= link_to "Delete", user, method: :delete,
                                  data: { confirm: "You sure?" }%></td>
    </tr>
  <% end %>
</tbody>
</table>
