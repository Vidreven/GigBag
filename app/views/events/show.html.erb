<h1>
	<%= @event.name %><%= t 'in_zagreb' %>
</h1>
<h3>
  <%= @event.description %> 
</h3>
<p>
	<%= t 'created_on' %><%= @event.created_at.strftime('%d.%m.%Y') %>
</p>
<p>
	<%= t 'status' %><%= @event.status %>
</p>
<p>
	<%= link_to t('edit_event'), edit_event_path(@event), :class => "small button" %>
</p>
<%= render 'comment_form' %>
<% if @comments.any? %>
	<ol class="comments">
    	<%= render @comments %>
    </ol>
<% end %>