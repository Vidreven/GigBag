<%= simple_form_for ([@user, @fan_profile]), url: user_fan_profile_path(@user) do |f| %>
<div id="spinner" style="position:absolute; top:50%; left:50%; width:200px; height:200px; margin-left: -100px; margin-top: -100px;"></div>
<select id="sources">
	<option value="lastfm">last.fm</option>
</select>
<%= f.input :lastfm_username %>
<div id="buttonFetchData" class="small button">Fetch data</div>
<%= f.input :band_list, :size=> 300, :input_html => { :autocomplete => 'off', :data => { :bands => Band.get_bands_list.to_json }, :class => "band_selection_field" } %>
<div class="actions">
	<%= f.submit :class => "small button" %>
</div>
<% end %>
