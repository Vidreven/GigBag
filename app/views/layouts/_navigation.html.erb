<dl class="tabs">
	<%= tab_item 'Home', root_path %>
	<%= tab_item 'View bands', bands_path %>
	<%= tab_item 'How this works?', 'help.html' %>
</dl>


<%= render :partial => "shared/user_welcome" if user_signed_in? %>

<div class="userButtons">
  <% if user_signed_in? %>
  <%= render :partial => "shared/signed_in_navigation" %>
  <% if current_user.admin %>
  <%= render :partial => "shared/admin_navigation" %>
  <% end %>
  <% else %>
  <%= render :partial => "shared/signed_out_navigation" %>
  <% end %>
</div>