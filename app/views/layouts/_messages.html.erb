<div class="row">
<% if flash[:error] %>
  <%= content_tag :div, :id => "flash_name", :class => "four columns centered alert-box secondary" do %>
    <%= flash[:error] %>
    <a class="close">x</a>
  <% end %>
<% end %>

<% if flash[:notice] %>
  <%= content_tag :div, :id => "flash_name", :class => "four columns centered alert-box success" do %>
    <%= flash[:notice] %>
    <a class="close">x</a>
  <% end %>
<% end %>

<% if flash[:alert] %>
  <%= content_tag :div, :id => "flash_name", :class => "four columns centered alert-box alert" do %>
    <%= flash[:alert] %>
    <a class="close">x</a>
  <% end %>
<% end %>
</div>